{% extends 'YumchaWebsiteBundle::adminlayout.html.twig' %}

{% block title %}
{{ parent() }} - IcecreamFlavour {{ 'views.show.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>IcecreamFlavour</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Name</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.name }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Titleca</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.titleCa }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Titlees</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.titleEs }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Titleen</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.titleEn }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('admin_icecreamflavour') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('admin_icecreamflavour_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('admin_icecreamflavour_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}